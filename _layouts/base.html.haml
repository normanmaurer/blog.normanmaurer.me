!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title The thoughts of Norman Maurer and more
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    :css
      body {
        padding-top: 60px;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/styles.css" }
    %link{ :rel=>'alternate',  :type=>'application/atom+xml', :href=>'/blog.atom' }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ :href=>"#{site.base_url}" } The thoughts of Norman Maurer and more
          %ul.nav
            %li
              %a{ :href=>"#{site.base_url}" } Home
            %li
              %a{ :href=> site.posts[0].url } Blog
            %li
              %a{ :href=> "#{site.base_url}/presentations" } Presentations
            %li
              %a{ :href=>"#{site.base_url}/blog.atom" }
                %img{ :src=>'/images/feed-icon-14x14.png'}
            %li
              %a{:href=>"https://twitter.com/normanmaurer" } 
                %img{:src=>"/images/twitter-bird-light-bgs.png", :style =>"width: 24px;"}
            %li
              %a{:href=>"https://github.com/normanmaurer" } 
                %img{:src=>"/images/GitHub-Mark-32px.png", :style =>"width: 18px;"}
            %li
              %a{:href=>"http://www.linkedin.com/in/normanmaurer" } 
                %img{:src=>"/images/InBug-30px-R.png", :style =>"width: 24px;"}
            %li
              %a{:href=>"https://speakerdeck.com/normanmaurer" } 
                %img{:src=>"/images/speakerdeck.png", :style =>"width: 24px;"}
    .container
      ~ content
      %hr
      %footer
        %p &copy; Norman Maurer #{Date.today.year}
      %script{ :type=>'text/javascript', :src=>'//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js' }
      %script{ :type=>'text/javascript', :src=>"#{site.base_url}/javascripts/bootstrap-collapse.js" }
      %script{ :type=>'text/javascript', :src=>"#{site.base_url}/javascripts/jquery-syntax/jquery.syntax.min.js" }
      :javascript
        $($.syntax({blockLayout: 'plain'}))
- if site.google_analytics
  = google_analytics_async
