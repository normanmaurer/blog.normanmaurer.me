---
layout: base
---
#content
  %article
    %header.page-header
      %h1.title
        %a{:href=>page.qurl}= page.title
      .meta
        %time= page.date.strftime("%B %e, %Y")
    .content
      ~ page.content

  %ul.pager
    - if page.previous_post
      %li.previous
        %a{ :href=>"../../../..#{page.previous_post.url}" } &larr; Older
    - else
      %li.previous.disabled
        %a{ :href=>'#' } &larr; Older
    %li
      %a{ :href=>"../../../index.html" } List all news items
    - if page.next_post
      %li.next
        %a{ :href=>"../../../..#{page.next_post.url}" } Newer &rarr;
    - else
      %li.next.disabled
        %a{ :href=>'#' } Newer &rarr;

.content
  = page.content
.comments
  = page.disqus_comments 
